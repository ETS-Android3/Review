<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
   <!--带边框的背景-->

    <!-- 第一层 -->
    <item>
        <shape>
            <solid android:color="#FFFFFF" />
            <stroke
                android:width="1dp"
                android:color="#ffdbdbdb" />
        </shape>
    </item>

    <!-- 第二层 -->
    <item
        android:left="1dp"
        android:bottom="1dp"
        android:top="1dp"
        android:right="1dp">
        <shape>
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>